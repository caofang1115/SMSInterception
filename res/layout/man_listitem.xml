<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/list_content_bg"
    android:layout_height="wrap_content">
    
    <TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="回复"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:gravity="center"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:layout_alignBottom="@+id/mainlist_number"
	    android:id="@+id/mainlist_reply"
	    android:clickable="true"
	    />
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:id="@+id/mainlist_number"
        android:textSize="18sp"
        android:text="18782956011"
        />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="删除"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:gravity="center"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:layout_alignBottom="@+id/mainlist_number"
	    android:id="@+id/mainlist_delete"
	    android:clickable="true"
	    />
	<TextView 
	     android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/mainlist_number"
        android:textSize="17sp"
        android:text="aasdasdja;sdjklasdjaswpdjas;dljasdui0pjzxcjap'swdias'dasdiasd;l"
        android:id="@+id/mainlist_content"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="11sp"
	    android:layout_below="@+id/mainlist_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:id="@+id/mainlist_time"
	    android:text="2013-09-13"
	    />
</RelativeLayout>
